{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tipocontenido</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tipoContenido.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ tipoContenido.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ tipoContenido.descripcion }}</td>
            </tr>
            <tr>
                <th>Publicado</th>
                <td>{% if tipoContenido.publicado %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tipocontenido_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tipocontenido_edit', { 'id': tipoContenido.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
